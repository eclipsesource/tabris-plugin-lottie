{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2015.promise" ],
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "outDir": "dist",
    "allowJs": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
